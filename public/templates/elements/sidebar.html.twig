<div class="sidebar">
    <div class="exploreSide">

    </div>
    <div class="profile-pic d-flex justify-content-center">
            {% if cover %}
                {{cover|raw}}
            {% else %}
            <figure class="image col-6 col-md-5 panel-image"><img class="user-image mx-auto"
                src="public/images/nice.JPG"></figure>
            {% endif %}
           
    </div>
    <div class="username">
        <h2 class="h2-myeb">{{user.getUsername()}}</h2>
    </div>
    {% if user.clientInfiniteQr == 0  %}
    <div class="exc-sold">
        <div class="mini-exc">
        </div>
        <div class="sold-exc">
            {{user.explorecoin}}
        </div>
    </div>
    {% endif %}  
    <div class="qr-link" id="qrLink">
        <a href="qr" class="link-qr"></a>
    </div>
    <div class="info-myeb">
        Générer un QRJeu
    </div>
    <div class="d-flex flex-column mt-4 mb-5  wrapper-link">
        <div class="mt-2  d-flex justify-content-start picto-actif">
            {% if path == 'home' %}
                <a href="home" class="side-link-actif mx-4"><i class="fas fa-eye"></i> Vue d'ensemble</a>
            {% else %}
                <a href="home" class="side-link mx-4"><i class="fas fa-eye"></i> Vue d'ensemble</a>   
            {% endif %}
            
        </div>
        <div class="mt-3 d-flex justify-content-start picto-inactif">
            {% if path == 'stat' %}
                <a href="stat" class="side-link-actif mx-4">  <i class="fas fa-chart-line"></i> Statistiques</a>
            {% else %}
                <a href="stat" class="side-link mx-4">  <i class="fas fa-chart-line"></i> Statistiques</a>
            {% endif %}   
        </div>
        {% if user.id == 914 %}
        <div class="mt-3 d-flex justify-content-start picto-inactif">
            {% if path == 'user' %}
                <a href="user" class="side-link-actif mx-4">  <i class="fa-solid fa-user"></i> Clients</a>
            {% else %}
                <a href="user" class="side-link mx-4">  <i class="fa-solid fa-user"></i> Clients</a>
            {% endif %}   
        </div>
        {% endif %}
        <div class="mt-3 d-flex justify-content-start picto-inactif">
            <a href="logout" class="side-link mx-4">  <i class="fas fa-sign-out"></i> Se déconnecter</a>
        </div>
    </div>
    
</div>